<style>
  .html--{{ section.id }} {background-color: {{ section.settings.bg_color }};}
</style>
<section class="section section--html html html--{{ section.id }} {{ section.settings.padding_top }} {{ section.settings.padding_bottom }}" {{ section.shopify_attributes }} >
  {% if section.settings.title != blank %}
    <div class="section__header product-listing__header container--wide">
      <h2 class="h5 h4-m tu ls4">{{ section.settings.title }}</h2>
    </div>
  {% endif %}

  <div class="section__content {{ section.settings.containment }}">
    {{ section.settings.html }}
  </div>
</section>

{% schema %}
{
  "name": "HTML",
  "settings": [
    {
      "type": "header",
      "content": "Design Settings"
    },
    {
      "type":"select",
      "id":"padding_top",
      "label":"Container Padding Top",
      "options":[
        {"label":"None", "value":"padding-top--tight"},
        {"label":"Tight", "value":"padded-top--tight"},
        {"label":"Default", "value":"padded-top--default"},
        {"label":"Large", "value":"padded-top--large"}
      ],
      "default":"padded-top--default"
    },
    {
      "type":"select",
      "id":"padding_bottom",
      "label":"Container Padding Bottom",
      "options":[
        {"label":"None", "value":"padded-bottom--none"},
        {"label":"Tight", "value":"padded-bottom--tight"},
        {"label":"Default", "value":"padded-bottom--default"},
        {"label":"Large", "value":"padded-bottom--large"}
      ],
      "default":"padded-bottom--default"
    },
    {
      "type":"select",
      "id":"containment",
      "label":"Container Size",
      "options":[
        {"label":"Full Width", "value":"container--full-width"},
        {"label":"Wide", "value":"container--wide"},
        {"label":"Standard", "value":"container"},
        {"label":"Slim", "value":"container--slim"}
      ],
      "default":"container"
    },
    {
      "type":"color",
      "id":"bg_color",
      "label":"Background Color",
      "default":"#fff"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type":"text",
      "id":"title",
      "label":"Heading"
    },
    {
      "type":"textarea",
      "id":"html",
      "label":"html"
    }
  ],
  "presets": [{
    "name": "HTML",
    "category": "Content"
  }]
}
{% endschema %}

