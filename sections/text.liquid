<style>
  .text--{{ section.id }} {background-color: {{ section.settings.bg_color }};}
  .text--{{ section.id }} .text__text h2,
  .text--{{ section.id }} .text__text .subtext {color: {{ section.settings.heading_color }};}
</style>
<section class="section section--text text text--{{ section.id }} {{ section.settings.padding_top }} {{ section.settings.padding_bottom }}" {{ section.shopify_attributes }}>
  {% case section.settings.text_alignment %}
    {% when 'center' %}
      {% assign alignment_class = 'tc' %}
    {% when 'right' %}
      {% assign alignment_class = 'tr' %}
    {% else %}
      {% assign alignment_class = 'tl' %}
  {% endcase %}

  <div class="text__text {{ alignment_class }}">
    <h2 class="h5 h4-m">{{ section.settings.title }}</h2>
    <p class="h7 subtext">{{ section.settings.attribution }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Text",
  "settings": [
    {
      "type": "header",
      "content": "Design Settings"
    },
    {
      "type":"select",
      "id":"padding_top",
      "label":"Container Padding Top",
      "options":[
        {"label":"None", "value":"padding-top--tight"},
        {"label":"Tight", "value":"padded-top--tight"},
        {"label":"Default", "value":"padded-top--default"},
        {"label":"Large", "value":"padded-top--large"}
      ],
      "default":"padded-top--default"
    },
    {
      "type":"select",
      "id":"padding_bottom",
      "label":"Container Padding Bottom",
      "options":[
        {"label":"None", "value":"padded-bottom--none"},
        {"label":"Tight", "value":"padded-bottom--tight"},
        {"label":"Default", "value":"padded-bottom--default"},
        {"label":"Large", "value":"padded-bottom--large"}
      ],
      "default":"padded-bottom--default"
    },
    {
      "type":"color",
      "id":"bg_color",
      "label":"Text Background Color",
      "default":"#efefef"
    },
    {
      "type":"color",
      "id":"heading_color",
      "label":"Text Heading Color",
      "default":"#000"
    },
    {
      "type":"select",
      "id":"text_alignment",
      "label":"Text Position",
      "options":[
        {"label":"Left", "value":"left"},
        {"label":"Center", "value":"center"},
        {"label":"Right", "value":"right"}
      ],
      "default":"center"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type":"textarea",
      "id":"title",
      "label":"Heading"
    },
    {
      "type":"text",
      "id":"attribution",
      "label":"Attribution (subtext)",
      "info":"Leave blank to hide"
    }
  ],
  "presets": [{
    "name": "Text",
    "category": "Content"
  }]
}
{% endschema %}
