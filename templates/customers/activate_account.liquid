<main class="content content--no-sidebar">
  <div class="container">
    <div class="page-main row row--gutters">
      <div class="column column--xs-12 column--md-4 column--md-offset-4">
        <div class="page-header">
          <h1 class="h4">{{ page.title }}</h1>
        </div>
        <div class="page-content">
          <p>Create your password to activate your account</p>
          {% form 'activate_customer_password' %}
            {{ form.errors | default_errors }}
            <div class="form__row" id="password">
              <div class="form__field">
                <label class="large" for="password">Password</label><br>
                <input type="password" value="" name="customer[password]" id="customer_password" size="30" />
              </div>
            </div>
            <div class="form__row" id="password_confirm">
              <div class="form__field">
                <label class="large" for="password_confirmation">Password Confirmation</label><br>
                <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" size="30" />
              </div>
            </div>
            <div class="form__actions">
              <input class="btn btn--block" type="submit" value="Activate Account" />
              <span class="note">or</span>
              <input type="submit" class="btn btn--block" name="decline" id="customer_decline" value="Decline Invitation" />
            </div>
          {% endform %}
        </div>
      </div>
    </section>
  </div>
</main>

